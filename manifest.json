{
    "manifest_version": 2,

    "name": "<a> previewer",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "0.87",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Click here!"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://*/"
    ]

}